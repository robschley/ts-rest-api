{
  "compilerOptions": {
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "build",
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "tests",
    "example"
  ]
}